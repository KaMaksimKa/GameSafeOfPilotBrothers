<UserControl x:Class="GameSafeOfPilotBrothers.Views.UserControls.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameSafeOfPilotBrothers.Views.UserControls"
             xmlns:viewModels="clr-namespace:GameSafeOfPilotBrothers.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:SettingsViewModel></viewModels:SettingsViewModel>
    </UserControl.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="30 20 30 0" Content=" Количество рукояток в ряду" FontSize="20"></Label>
            <TextBox  Margin="30 20 30 0" FontSize="20" Width="70" Text="{Binding Path=NumberHandlesInRow, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <Button Margin="50 30 50 0" Content="Сохранить" FontSize="20" Command="{Binding Path=ChangeNumberHandlesInRowCommand}"></Button>
    </StackPanel>
</UserControl>
